<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Attendance">



    <Spinner
        android:id="@+id/attendance_spinner_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraond_spinner_subject"
        android:entries="@array/subject_name"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/attendance_iv_spes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/space"
        android:layout_below="@id/attendance_spinner_subject"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/attendance_iv_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/qr_code"
        android:layout_centerInParent="true"/>
</RelativeLayout>